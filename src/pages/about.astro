---
import Layout from '../layouts/BlogPost.astro';
---

<Layout
	title="About CommunitySMP"
	description="About me, my Team and my Server"
	pubDate={new Date('August 12 2025')}
	heroImage="/mc1.jpg"
>
	<style>
		/* Background Hero Animation */
		body {
			background: radial-gradient(ellipse at center, #0a0a0a, #1a1a1a);
			overflow-x: hidden;
		}

		.hero-bg {
			position: fixed;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			z-index: -1;
			overflow: hidden;
		}

		.particle {
			position: absolute;
			border-radius: 50%;
			background: linear-gradient(45deg, #00ffff, #ff00ff);
			opacity: 0.7;
			animation: floatParticles 20s linear infinite;
			pointer-events: none;
		}

		@keyframes floatParticles {
			0% { transform: translateY(100vh) translateX(0); }
			100% { transform: translateY(-50vh) translateX(100vw); }
		}

		p, ul, ol, li {
			font-family: 'Poppins', sans-serif;
			font-size: 1.2rem;
			line-height: 1.8;
			color: #eee;
			position: relative;
			z-index: 1;
		}

		h3 {
			color: #00ffff;
			font-size: 1.8rem;
			margin-top: 2rem;
			text-shadow: 0 0 10px #00ffff99;
		}

		ul li {
			margin-bottom: 10px;
			position: relative;
			padding-left: 25px;
			transition: transform 0.3s ease, color 0.3s ease;
		}

		ul li::before {
			content: "âœ”";
			position: absolute;
			left: 0;
			color: #ff00ff;
			text-shadow: 0 0 5px #ff00ff99, 0 0 10px #00ffff77;
		}

		ul li:hover {
			transform: translateX(5px);
			color: #00ffff;
		}

		code {
			background: rgba(0,255,255,0.1);
			padding: 3px 6px;
			border-radius: 5px;
			font-family: 'Fira Code', monospace;
			color: #00ffff;
		}

		p.emoji-title {
			font-size: 1.5rem;
			font-weight: bold;
			background: linear-gradient(90deg, #00ffff, #ff00ff, #ffea00);
			background-clip: text;
			-webkit-background-clip: text;
			color: transparent;
			animation: gradientText 5s ease infinite;
			display: inline-block;
		}

		@keyframes gradientText {
			0% { background-position: 0% 50%; }
			50% { background-position: 100% 50%; }
			100% { background-position: 0% 50%; }
		}

		section.animate-on-scroll {
			opacity: 0;
			transform: translateY(50px);
			transition: opacity 0.7s ease, transform 0.7s ease;
		}

		section.animate-on-scroll.visible {
			opacity: 1;
			transform: translateY(0);
		}

		a.discord-btn {
			display: inline-block;
			margin-top: 20px;
			padding: 15px 40px;
			border-radius: 15px;
			background: linear-gradient(90deg, #00ffff, #ff00ff, #ffea00);
			color: black;
			font-weight: bold;
			text-decoration: none;
			font-size: 1.2rem;
			box-shadow: 0 0 20px #00ffff88, 0 0 40px #ff00ff66;
			transition: all 0.4s ease;
		}

		a.discord-btn:hover {
			transform: scale(1.1);
			color: white;
			background: linear-gradient(90deg, #ff00ff, #00ffff, #ffea00);
			box-shadow: 0 0 30px #ff00ffbb, 0 0 60px #00ffffaa;
		}
	</style>

	<div class="hero-bg" id="hero-bg"></div>

	<section class="animate-on-scroll">
