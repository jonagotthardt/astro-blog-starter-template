	<style>
		body {
			margin: 0;
			font-family: 'Poppins', sans-serif;
			color: #e0e0e0;
			overflow-x: hidden;
			background: radial-gradient(ellipse at bottom, #0a0a0a 0%, #000000 100%);
		}

		/* Sterne-Hintergrund */
		body::before {
			content: "";
			position: fixed;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			background: url('/stars.png') repeat;
			background-size: cover;
			opacity: 0.3;
			z-index: -1;
			animation: starMove 200s linear infinite;
		}

		@keyframes starMove {
			from { background-position: 0 0; }
			to { background-position: -10000px 5000px; }
		}

		h1, h2, h3 {
			color: #00bcd4;
			text-shadow: 0 0 15px rgba(0,188,212,0.5);
		}

		p, li {
			color: #f0f0f0;
		}

