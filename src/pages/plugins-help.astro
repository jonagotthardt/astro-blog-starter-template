---
import Layout from "../layouts/BlogPost.astro";
import AllMobEggs from '../content/AllMobEggs.md';
import MysticalGems from '../content/MysticalGems.md';
import ExtendedInventory from '../content/ExtendedInventory.md';
---

<Layout title="Plugins Help">
  <div class="help-page">
    <h1>Plugins Help</h1>

    <section>
      <h2>All Mob Eggs</h2>
      <AllMobEggs class="markdown" />
    </section>

    <section>
      <h2>Mystical Gems</h2>
      <MysticalGems class="markdown" />
    </section>

    <section>
      <h2>Extended Inventory</h2>
      <ExtendedInventory class="markdown" />
    </section>
  </div>

  <style>
    .help-page {
      max-width: 900px;
      margin: 0 auto;
      padding: 2rem;
      color: #333;
      font-family: Arial, sans-serif;
    }

    .help-page h1 {
      font-size: 2rem;
      margin-bottom: 1rem;
    }

    .help-page h2 {
      font-size: 1.5rem;
      margin-top: 2rem;
      margin-bottom: 1rem;
    }

    .markdown {
      line-height: 1.6;
    }

    /* Hervorgehobene Boxen */
    .markdown strong,
    .markdown code {
      background-color: #f0f0f0; /* hellgrau */
      color: #000; /* schwarze Schrift */
      padding: 2px 4px;
      border-radius: 4px;
    }

    .markdown code {
      font-family: monospace;
    }

    .markdown hr {
      border: none;
      border-top: 1px solid #ccc;
      margin: 2rem 0;
    }

    .markdown img {
      max-width: 100%;
      height: auto;
      display: block;
      margin: 1rem 0;
    }
  </style>
</Layout>