---
import Layout from "../layouts/BlogPost.astro";
import { Markdown } from '@astrojs/markdown-remark';

import AllMobEggs from '../content/AllMobEggs.md';
import MysticalGems from '../content/MysticalGems.md';
import ExtendedInventory from '../content/ExtendedInventory.md';

const plugins = [
  { name: "AllMobEggs", version: "2.0", md: AllMobEggs },
  { name: "MysticalGems", version: "1.0", md: MysticalGems },
  { name: "ExtendedInventory", version: "1.0", md: ExtendedInventory }
];
---

<style>
.plugin-readme {
  background-color: #1e1e1e;
  color: #f5f5f5;
  padding: 1rem;
  border-radius: 8px;
  margin-bottom: 2rem;
  max-height: 600px;
  overflow-y: auto;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}

.plugin-readme pre,
.plugin-readme code {
  background-color: #2d2d2d;
  color: #f8f8f2;
  padding: 0.5rem;
  border-radius: 4px;
  overflow-x: auto;
}

.plugin-readme h1 { color: #ffcc00; font-size: 1.8rem; margin-top: 1rem; }
.plugin-readme h2 { color: #ff9900; font-size: 1.5rem; margin-top: 1rem; }
.plugin-readme h3 { color: #ff6600; font-size: 1.3rem; margin-top: 0.8rem; }

.plugin-readme a { color: #00ccff; text-decoration: underline; }
.plugin-readme ul, .plugin-readme ol { margin-left: 1.5rem; margin-bottom: 1rem; }

.back-button {
  display: inline-block;
  margin-bottom: 2rem;
  padding: 0.5rem 1rem;
  background: linear-gradient(90deg, #00f2ff, #ff00f2);
  color: white;
  border-radius: 6px;
  text-decoration: none;
  font-weight: bold;
}
.back-button:hover { transform: scale(1.05); }
</style>

<Layout title="Minecraft Plugin Help">
  <a href="/plugins" class="back-button">â¬… Back to Plugins</a>
  <h1>Plugin Help</h1>

  {plugins.map(plugin => (
    <article>
      <h2>{plugin.name} <small>v{plugin.version}</small></h2>
      <div class="plugin-readme">
        <Markdown content={plugin.md} />
      </div>
    </article>
  ))}
</Layout>
