---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import CookieBanner from '../components/CookieBanner.astro';

const serverIP = "communitysmp.de";
const discordLink = "https://discord.gg/Js3c3ynRRd";
---

<html lang="en">
<head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
        /* -------------------- Grundlayout -------------------- */
        body {
            margin: 0;
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(120deg, #0f0c29, #302b63, #24243e);
            color: #ffffff;
            overflow-x: hidden;
        }

        /* -------------------- Header -------------------- */
        header {
            padding: 80px 20px;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        h1 {
            font-size: 4rem;
            margin: 0;
            background: linear-gradient(90deg, #00ffff, #ff00ff, #ffea00);
            background-size: 200% 200%;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: gradientAnimation 5s ease infinite;
            text-shadow: 0 0 20px rgba(0,255,255,0.7);
        }

        @keyframes gradientAnimation {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        p {
            font-size: 1.4rem;
            margin-top: 15px;
            color: #ccc;
            text-shadow: 0 0 10px rgba(0,255,255,0.3);
        }

        /* -------------------- IP Box -------------------- */
        .ip-box {
            background: rgba(0, 0, 0, 0.6);
            padding: 20px 40px;
            border-radius: 15px;
            margin-top: 30px;
            font-size: 1.5rem;
            cursor: pointer;
            position: relative;
            font-weight: bold;
            color: #00ffff;
            box-shadow: 0 0 20px #00ffff88, 0 0 40px #ff00ff66;
            transition: all 0.3s ease;
        }

        .ip-box:hover {
            transform: scale(1.05);
            background: rgba(0, 255, 255, 0.2);
            color: #ff00ff;
        }

        .copy-popup {
            position: absolute;
            bottom: -40px;
            left: 50%;
            transform: translateX(-50%);
            background: #00ffff;
            color: black;
            padding: 8px 15px;
            border-radius: 5px;
            font-size: 0.95rem;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.3s ease;
            box-shadow: 0 0 15px #00ffff99;
        }

        .copy-popup.show {
            opacity: 1;
        }

        /* -------------------- Sections -------------------- */
        section {
            max-width: 900px;
            margin: 70px auto;
            padding: 40px;
            text-align: center;
            border-radius: 15px;
            background: rgba(255,255,255,0.05);
            box-shadow: 0 0 40px rgba(0,255,255,0.1);
            backdrop-filter: blur(10px);
            transition: transform 0.6s ease, opacity 0.6s ease;
        }

        h2 {
            font-size: 2rem;
            border-bottom: 2px solid #00ffff;
            display: inline-block;
            padding-bottom: 8px;
            margin-bottom: 25px;
            color: #00ffff;
        }

        ul, ol {
            text-align: left;
            display: inline-block;
            margin-top: 20px;
            font-size: 1.2rem;
            line-height: 1.8;
        }

        /* -------------------- Buttons -------------------- */
        .discord-btn, .apply-btn {
            background: linear-gradient(90deg, #00ffff, #ff00ff, #ffea00);
            padding: 18px 40px;
            border-radius: 15px;
            text-decoration: none;
            font-weight: bold;
            color: black;
            font-size: 1.2rem;
            display: inline-block;
            margin-top: 25px;
            transition: all 0.4s ease;
            box-shadow: 0 0 20px #00ffff88, 0 0 40px #ff00ff66;
        }

        .discord-btn:hover, .apply-btn:hover {
            background: linear-gradient(90deg, #ff00ff, #00ffff, #ffea00);
            color: white;
            transform: scale(1.1);
            box-shadow: 0 0 30px #ff00ffbb, 0 0 60px #00ffffaa;
        }

        /* -------------------- About Section -------------------- */
        .about-section {
            text-align: left;
            line-height: 1.7;
        }

        .about-section h3 {
            color: #00ffff;
            margin-top: 25px;
            font-size: 1.6rem;
        }

        .about-section strong {
            color: #ffffff;
        }

        .emoji-title {
            font-size: 1.6rem;
        }

        /* -------------------- Animations -------------------- */
        .animate-on-scroll {
            opacity: 0;
            transform: translateY(50px);
        }

        .animate-on-scroll.visible {
            opacity: 1;
            transform: translateY(0);
        }

        /* -------------------- Particles Background -------------------- */
        .particles {
            position: fixed;
            top:0;
            left:0;
            width:100%;
            height:100%;
            pointer-events: none;
            z-index: 0;
        }

    </style>
</head>
<body>
    <div class="particles" id="particles"></div>
    <Header />

    <main style="position: relative; z-index: 1;">
        <header class="animate-on-scroll">
            <h1>CommunitySMP</h1>
            <p>Your Minecraft server for fun, community & adventures!</p>
            <div class="ip-box" id="copyIP" data-ip={serverIP}>
                üåê IP: {serverIP}
                <span class="copy-popup" id="copyPopup">IP copied!</span>
            </div>
        </header>

        <section class="animate-on-scroll">
            <h2>Rules</h2>
            <ul>
                <li>No griefing or stealing</li>
                <li>Be respectful to others</li>
                <li>No hacks or unfair mods</li>
                <li>Build and have fun!</li>
            </ul>
        </section>

        <section class="animate-on-scroll">
            <h2>Team</h2>
            <ul>
                <li>Owner: Jona Gotthardt</li>
                <li>Admin: <a href="/apply" class="apply-btn">Apply Now!</a></li>
                <li>Moderators: <a href="/apply" class="apply-btn">Apply Now!</a></li>
            </ul>
        </section>

        <section class="animate-on-scroll">
            <h2>Community</h2>
            <a href={discordLink} class="discord-btn">üí¨ Join our Discord</a>
        </section>

        <section class="about-section animate-on-scroll">
            <p class="emoji-title">üéÆ <strong>Welcome to the CommunitySMP ‚Äì Free for Everyone!</strong></p>
            <p>
                Hey there! üëã Looking for a fun Minecraft world where <strong>everyone is welcome</strong>,
                with no payments, no paywalls ‚Äì just pure survival fun? Then you‚Äôve just found your new home! üè°
            </p>
            <p>
                Our CommunitySMP is a friendly place for both <strong>Java</strong> and <strong>Bedrock</strong> players to
                build, explore, and survive together. Whether you want to start a cozy village, go on epic adventures,
                or just hang out with friends ‚Äì there‚Äôs a place for you here.
            </p>

            <h3>üåç Server Details</h3>
            <ul>
                <li>‚ú® <strong>IP:</strong> communitysmp.de</li>
                <li>‚ú® <strong>Version:</strong> 1.21.8</li>
                <li>‚ú® <strong>Bedrock Port:</strong> 20274</li>
                <li>‚ú® Works for Java & Bedrock</li>
                <li>‚ú® Type: Survival Multiplayer (SMP) with community rules</li>
            </ul>

            <h3>üî• Why join us?</h3>
            <ul>
                <li>Completely free ‚Äì no ranks to buy, no hidden fees</li>
                <li>A friendly & respectful community</li>
                <li>Events & group projects to keep things exciting</li>
                <li>Open 24/7 so you can play whenever you want</li>
            </ul>

            <h3>‚ö° How to Join</h3>
            <ol>
                <li>Open Minecraft (Java or Bedrock)</li>
                <li>Go to ‚ÄúMultiplayer‚Äù (Java) or ‚ÄúServers‚Äù (Bedrock)</li>
                <li>Add our IP address</li>
                <li>Click ‚ÄúJoin‚Äù and start your adventure! üöÄ</li>
            </ol>
        </section>
    </main>

    <Footer />
    <CookieBanner />

    <script>
        // Copy IP
        const copyBtn = document.getElementById("copyIP");
        const popup = document.getElementById("copyPopup");

        copyBtn.addEventListener("click", async () => {
            const ip = copyBtn.getAttribute("data-ip");
            try {
                await navigator.clipboard.writeText(ip);
                popup.classList.add("show");
                setTimeout(() => popup.classList.remove("show"), 1500);
            } catch (err) {
                console.error("Error copying IP: ", err);
            }
        });

        // Scroll animations
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, { threshold: 0.2 });

        document.querySelectorAll('section, header').forEach(el => {
            el.classList.add('animate-on-scroll');
            observer.observe(el);
        });

        // Particles background
        const canvas = document.createElement('canvas');
        document.getElementById('particles').appendChild(canvas);
        const ctx = canvas.getContext('2d');
        let w = canvas.width = window.innerWidth;
        let h = canvas.height = window.innerHeight;

        let particles = [];
        for (let i=0;i<100;i++) {
            particles.push({
                x: Math.random()*w,
                y: Math.random()*h,
                r: Math.random()*3+1,
                d: Math.random()*1
            });
        }

        function draw() {
            ctx.clearRect(0,0,w,h);
            ctx.fillStyle = 'rgba(0,255,255,0.7)';
            ctx.beginPath();
            for (let i=0;i<particles.length;i++){
                let p = particles[i];
                ctx.moveTo(p.x,p.y);
                ctx.arc(p.x,p.y,p.r,0,Math.PI*2,true);
            }
            ctx.fill();
            update();
        }

        function update(){
            for (let i=0;i<particles.length;i++){
                let p = particles[i];
                p.y += 0.2;
                if(p.y>h){p.y=0;p.x=Math.random()*w;}
            }
        }

        setInterval(draw,30);
        window.addEventListener('resize',()=>{w=canvas.width=window.innerWidth; h=canvas.height=window.innerHeight;});
    </script>
</body>
</html>