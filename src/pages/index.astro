---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const serverIP = "communitysmp.de";
const discordLink = "https://discord.gg/Js3c3ynRRd";
---

<html lang="en">
<head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
        header {
            padding: 40px 20px;
            text-align: center;
        }
        h1 {
            font-size: 3rem;
            margin: 0;
        }
        p {
            font-size: 1.2rem;
        }
        .ip-box {
            background: rgba(0, 0, 0, 0.4);
            padding: 15px 30px;
            display: inline-block;
            border-radius: 10px;
            margin-top: 20px;
            font-size: 1.3rem;
            cursor: pointer;
            transition: 0.3s;
            position: relative;
        }
        .ip-box:hover {
            background: rgba(0, 0, 0, 0.6);
        }
        .copy-popup {
            position: absolute;
            bottom: -30px;
            left: 50%;
            transform: translateX(-50%);
            background: #00bcd4;
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
            font-size: 0.9rem;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.3s ease;
        }
        .copy-popup.show {
            opacity: 1;
        }
        section {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            text-align: center;
        }
        h2 {
            border-bottom: 2px solid #00bcd4;
            display: inline-block;
            padding-bottom: 5px;
        }
        ul {
            text-align: left;
            display: inline-block;
            margin-top: 10px;
        }
        .discord-btn {
            background: #5865F2;
            padding: 15px 25px;
            border-radius: 8px;
            text-decoration: none;
            color: white;
            font-weight: bold;
            display: inline-block;
            margin-top: 20px;
            transition: 0.3s;
        }
        .discord-btn:hover {
            background: #4752C4;
        }
        footer {
            margin-top: 50px;
            padding: 20px;
            font-size: 0.9rem;
            opacity: 0.7;
            text-align: center;
        }
    </style>
</head>
<body>
    <Header />

    <main>
        <header>
            <h1>CommunitySMP</h1>
            <p>Your Minecraft server for fun, community & adventures!</p>
            <div class="ip-box" id="copyIP" data-ip={serverIP}>
                üåê IP: {serverIP}
                <span class="copy-popup" id="copyPopup">IP copied!</span>
            </div>
        </header>

        <section>
            <h2>Rules</h2>
            <ul>
                <li>No griefing or stealing</li>
                <li>Be respectful to others</li>
                <li>No hacks or unfair mods</li>
                <li>Build and have fun!</li>
            </ul>
        </section>

        <section>
            <h2>Team</h2>
            <ul>
                <li>Owner: Jona Gotthardt</li>
                <li>Admin: <a href="/apply" class="apply-btn">Apply Now!</a></li>
                <li>Moderators: <a href="/apply" class="apply-btn">Apply Now!</a></li>
            </ul>
        </section>

        <section>
            <h2>Community</h2>
            <a href={discordLink} class="discord-btn">üí¨ Join our Discord</a>
        </section>
    </main>

    <Footer />

    <script>
        const copyBtn = document.getElementById("copyIP");
        const popup = document.getElementById("copyPopup");

        copyBtn.addEventListener("click", async () => {
            const ip = copyBtn.getAttribute("data-ip");
            try {
                await navigator.clipboard.writeText(ip);
                popup.classList.add("show");
                setTimeout(() => popup.classList.remove("show"), 1500);
            } catch (err) {
                console.error("Error copying IP: ", err);
            }
        });
    </script>
</body>
</html>