---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const serverIP = "play.communitysmp.de";
const discordLink = "https://discord.gg/dein-link";
---

<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
        <style>
            header {
                padding: 40px 20px;
                text-align: center;
            }
            h1 {
                font-size: 3rem;
                margin: 0;
            }
            p {
                font-size: 1.2rem;
            }
            .ip-box {
                background: rgba(0, 0, 0, 0.4);
                padding: 15px 30px;
                display: inline-block;
                border-radius: 10px;
                margin-top: 20px;
                font-size: 1.3rem;
                cursor: pointer;
                transition: 0.3s;
            }
            .ip-box:hover {
                background: rgba(0, 0, 0, 0.6);
            }
            section {
                max-width: 800px;
                margin: 50px auto;
                padding: 20px;
                text-align: center;
            }
            h2 {
                border-bottom: 2px solid #00bcd4;
                display: inline-block;
                padding-bottom: 5px;
            }
            ul {
                text-align: left;
                display: inline-block;
                margin-top: 10px;
            }
            .discord-btn {
                background: #5865F2;
                padding: 15px 25px;
                border-radius: 8px;
                text-decoration: none;
                color: white;
                font-weight: bold;
                display: inline-block;
                margin-top: 20px;
                transition: 0.3s;
            }
            .discord-btn:hover {
                background: #4752C4;
            }
            footer {
                margin-top: 50px;
                padding: 20px;
                font-size: 0.9rem;
                opacity: 0.7;
                text-align: center;
            }
        </style>
    </head>
    <body>
        <Header />

        <main>
            <header>
                <h1>CommunitySMP</h1>
                <p>Dein Minecraft Server f√ºr Spa√ü, Community & Abenteuer!</p>
                <div class="ip-box" onclick="navigator.clipboard.writeText('{serverIP}'); alert('IP kopiert!')">
                    üåê IP: {serverIP}
                </div>
            </header>

            <section>
                <h2>Regeln</h2>
                <ul>
                    <li>Kein Griefing oder Stehlen</li>
                    <li>Respektvoller Umgang miteinander</li>
                    <li>Keine Hacks oder unfairen Mods</li>
                    <li>Baue und habe Spa√ü!</li>
                </ul>
            </section>

            <section>
                <h2>Team</h2>
                <ul>
                    <li>Owner: DeinName</li>
                    <li>Co-Owner: ...</li>
                    <li>Moderatoren: ...</li>
                </ul>
            </section>

            <section>
                <h2>Community</h2>
                <a href={discordLink} class="discord-btn">üí¨ Tritt unserem Discord bei</a>
            </section>
        </main>

        <Footer />
    </body>
</html>